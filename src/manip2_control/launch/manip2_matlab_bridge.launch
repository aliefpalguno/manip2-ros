<launch>
  <!--
    Launch only the MATLAB bridge node.

    Assumptions:
    - Python node file: manip2_matlab_bridge.py
      (the pure ROS bridge version that:
        * subscribes  /matlab/joint_command_deg
        * publishes   /manip2/command_deg
        * publishes   /ros/current_joint_state_deg
        * republishes /matlab/perceived_joint_state to /matlab_perceived/joint_states
        * provides    /manip2/agent_enable, /manip2/agent_disable, /manip2/target_reached
      )
    - No direct Dynamixel / serial access in this node.
  -->

  <!-- Optional: joint limits for extra clipping (env & hardware should match) -->
  <!--
  <arg name="urdf_limits_deg" default="[[-90,90],[-30,36],[-105.7,0],[-75,75],[-90,90]]" />
  -->

  <node pkg="manip2_control"
        type="manip2_matlab_bridge.py"
        name="manip2_matlab_bridge"
        output="screen">

    <!-- If you want to override limits from launch, uncomment this: -->
    <!--
    <param name="urdf_limits_deg" value="$(arg urdf_limits_deg)" />
    -->

  </node>
</launch>
